<div className="flex items-center gap-2">
  <Input
    id="{{FIELD}}"
    type="checkbox"
    checked={!!formData.{{FIELD}}}
    onChange={(e) =>
      setFormData((prev) => ({ ...prev, "{{FIELD}}": e.target.checked }))
    }
    {{REQUIRED}}
  />
  <Label htmlFor="{{FIELD}}">{{LABEL}}*</Label>
</div>