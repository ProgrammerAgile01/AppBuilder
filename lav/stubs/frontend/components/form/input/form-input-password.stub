<div className="space-y-1">
  <Label htmlFor="{{FIELD}}">{{LABEL}}*</Label>
  <Input
    type="password"
    id="{{FIELD}}"
    placeholder="{{PLACEHOLDER}}"
    value={formData.{{FIELD}} || ""}
    onChange={(e) =>
      setFormData((prev) => ({ ...prev, "{{FIELD}}": e.target.value }))
    }
    {{REQUIRED}}
  />
</div>